{
  "name": "react-native-survey-js-ui",
  "version": "0.1.0",
  "description": "Native mobile UI components for SurveyJS Form Library - iOS and Android only, no WebView dependencies",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "types": "./lib/typescript/module/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": {
        "types": "./lib/typescript/module/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-survey-js-ui-example",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "COVERAGE=true jest --coverage",
    "test:coverage:check": "COVERAGE=true jest --coverage --silent",
    "test:coverage:report": "COVERAGE=true jest --coverage && open coverage/lcov-report/index.html",
    "test:coverage:trend": "COVERAGE=true jest --coverage && node scripts/coverage-check.js",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it --only-version",
    "build": "yarn clean && bob build",
    "build:dev": "bob build --watch",
    "build:prod": "yarn clean && yarn typecheck && bob build",
    "validate": "yarn typecheck && yarn lint && yarn test",
    "validate:build": "node scripts/validate-build.js",
    "prepublishOnly": "yarn build:prod && yarn validate",
    "dev": "yarn build:dev",
    "dev:ios": "cd example && yarn ios",
    "dev:android": "cd example && yarn android",
    "check": "yarn typecheck && yarn lint",
    "check:all": "yarn validate && yarn validate:build",
    "reset": "yarn clean && rm -rf node_modules && yarn install",
    "reset:cache": "cd example && yarn start --reset-cache",
    "info": "yarn info react-native && cd example && npx react-native info"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "surveyjs",
    "survey",
    "forms",
    "questionnaire",
    "mobile",
    "offline",
    "ui-components",
    "native"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iotashan/react-native-survey-js-ui.git"
  },
  "author": "Shan Carter <shan@greyskullmedia.com> (https://github.com/iotashan)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iotashan/react-native-survey-js-ui/issues"
  },
  "homepage": "https://github.com/iotashan/react-native-survey-js-ui#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native-community/cli": "^18.0.0",
    "@react-native/babel-preset": "0.78.2",
    "@react-native/eslint-config": "^0.78.0",
    "@release-it/conventional-changelog": "^9.0.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.5",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^18.3.12",
    "commitlint": "^19.6.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "flow-parser": "^0.273.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jest-junit": "^16.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.0.3",
    "react": "18.3.1",
    "react-native": "0.76.9",
    "react-native-builder-bob": "^0.40.11",
    "react-test-renderer": "18.3.1",
    "release-it": "^17.10.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "survey-core": "file:./survey-core-rn"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": false
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "type": "library",
    "languages": "js",
    "version": "0.50.3"
  }
}
