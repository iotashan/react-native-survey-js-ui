{
  "extends": "./tsconfig",
  "compilerOptions": {
    /* Override for build process */
    "rootDir": "./src",
    "outDir": "./lib/typescript",
    
    /* Emit Options for Library Build */
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    
    /* Additional strictness for library */
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "example",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**/*",
    "**/__mocks__/**/*"
  ]
}
